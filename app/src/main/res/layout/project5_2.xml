<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".project5_2">

    <TableRow>
        <EditText
            android:id="@+id/num1" />
    </TableRow>
    <TableRow>
        <EditText
            android:id="@+id/num2"/>
    </TableRow>
    <TableRow>
        <Button
            android:text="0"
            android:id="@+id/BtnNum0"/>
        <Button
            android:text="1"
            android:id="@+id/BtnNum1"/>
        <Button
            android:text="2"
            android:id="@+id/BtnNum2"/>
        <Button
            android:text="3"
            android:id="@+id/BtnNum3"/>
        <Button
            android:text="4"
            android:id="@+id/BtnNum4"/>
    </TableRow>
    <TableRow>
        <Button
            android:text="5"
            android:id="@+id/BtnNum5"/>
        <Button
            android:text="6"
            android:id="@+id/BtnNum6"/>
        <Button
            android:text="7"
            android:id="@+id/BtnNum7"/>
        <Button
            android:text="8"
            android:id="@+id/BtnNum8"/>
        <Button
            android:text="9"
            android:id="@+id/BtnNum9"/>

    </TableRow>
    <TableRow>
        <Button
            android:layout_margin="10dp"
            android:id="@+id/add"
            android:text="더하기"
            android:layout_span="5"/>
    </TableRow>
    <TableRow>
        <Button
            android:layout_margin="10dp"
            android:id="@+id/minus"
            android:text="빼기"
            android:layout_span="5"/>
    </TableRow>
    <TableRow>
        <Button
            android:layout_margin="10dp"
            android:text="곱하기"
            android:id="@+id/mul"
            android:layout_span="5"/>
    </TableRow>
    <TableRow>
        <Button
            android:layout_margin="10dp"
            android:text="나누기"
            android:id="@+id/div"
            android:layout_span="5"/>
    </TableRow>
    <TextView
        android:textSize="20dp"
        android:text="계산 결과: "
        android:textColor="@android:color/holo_red_light"
        android:layout_span="2"/>
    <TextView
        android:id="@+id/result"
        android:textSize="20dp"
        android:textColor="@android:color/holo_red_light"/>
    <TextView
        android:text="2018038028 민선홍"/>


</TableLayout>